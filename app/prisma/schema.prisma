datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Game {
    gameId    Int    @id @default(autoincrement())
    title     String @unique
    ageRating Int
    category  String
}

model Recommendation {
    recommendationId Int    @id @default(autoincrement())
    gamerId          String
    gameId           String
    dateRecommended  String
}

model Gamer {
    gamerId Int    @id @default(autoincrement())
    name    String
    email   String
    age     Int
}
